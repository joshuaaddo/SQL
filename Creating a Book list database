CREATE TABLE books (id INTEGER PRIMARY KEY, name TEXT, rating INTEGER);

INSERT INTO books VALUES (1, 'Wonder Man', 5);
INSERT INTO books VALUES (2, 'Peter Pan', 6);
INSERT INTO books VALUES (3, 'A time for Mercy', 7);
INSERT INTO books VALUES (4, 'Criminal Mind', 8);
INSERT INTO books VALUES (5, 'Preacher Man', 9);
INSERT INTO books VALUES (6, 'Soul Ties', 4);

-- display the database 
SELECT * FROM books;


-- display the database ordered by movie rating
SELECT * FROM books
WHERE rating >=7
ORDER BY rating DESC
